{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepAfterInactivity": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "backend": {
      "name": "Backend API",
      "rootDirectory": "/backend"
    },
    "frontend": {
      "name": "Frontend",
      "rootDirectory": "/frontend"
    }
  }
}
